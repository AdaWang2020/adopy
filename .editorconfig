# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 119

# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

# Use 2 spaces for the reStructuredText files
[*.rst]
indent_size = 2
max_line_length = 79

# Use 4 spaces for the MATLAB files
[*.m]
indent_size = 4
max_line_length = 79

[*.tex]
indent_size = 2
